rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /recipes/{recipeId} {
      allow read: if true;
      allow write: if false;
    }

    match /imports/{importId} {
      allow read: if true;
      allow write: if false;
    }

    // Chat threads
    match /threads/{threadId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;

      // Thread messages subcollection
      match /messages/{messageId} {
        allow read: if true;
        allow create: if true;
        allow update: if true;
        allow delete: if false;
      }
    }

    // User preferences - single-profile mode
    match /userpreferences/{uid} {
      // Allow owner to read/write their preferences
      // In single-profile mode, uid is "singleton"
      allow read, write: if true;
      
      // CRITICAL: Prevent client access to encrypted secrets
      // The secrets field should ONLY be accessible via server SDK
      // Client applications should use API endpoints to manage secrets
      // This rule allows reading the document but the API should never
      // return the secrets field to the client
    }

    match /shoppingListItems/{itemId} {
      allow read, write: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
